<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AbdominalCrunchesActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/abdominal_crunches_card"
        android:layout_width="350dp"
        android:layout_height="600dp"
        app:cardCornerRadius="40dp"
        android:backgroundTint="@color/purple_200"
        android:elevation="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.351">

        <TextView
            android:id="@+id/abt_abdominalcrunches"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lie on your back with your knees bent and your arms stretched forward. Then lift your upper body off the floor. Hold for a few seconds and slowly return. Do this for at least 30 seconds."
            android:layout_gravity="center"
            android:textSize="40sp"
            android:textAlignment="center"
            android:fontFamily="sans-serif-condensed"/>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>