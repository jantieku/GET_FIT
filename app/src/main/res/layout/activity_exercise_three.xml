<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ExerciseThreeActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/exethree_card"
        android:layout_width="350dp"
        android:layout_height="600dp"
        app:cardCornerRadius="40dp"
        android:backgroundTint="#58E65E"
        android:elevation="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.351">

        <LinearLayout
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Stand on the floor and grab your ankle from behind, close to your butt. Hold this position for some seconds and switch legs."
                android:layout_gravity="center"
                android:textSize="35sp"
                android:textAlignment="center"
                android:fontFamily="sans-serif-condensed"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Lie on your back with your arms on your sides and lift your legs to be perpendicular to the floor. Open your legs to your sides. Return and repeat."
                android:layout_gravity="center"
                android:textSize="35sp"
                android:textAlignment="center"
                android:fontFamily="sans-serif-condensed"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>