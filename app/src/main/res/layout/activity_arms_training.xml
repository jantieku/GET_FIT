<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SplitsTrainingActivity">

    <LinearLayout
        android:background="@drawable/topbgfour"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:orientation="vertical">
        <TextView
            android:textColorHighlight="@color/white"
            android:id="@+id/arms"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Arms"
            android:textAlignment="center"
            android:fontFamily="sans-serif-condensed"
            android:textColor="@color/black"
            android:textSize="35sp"/>

        <TextView
            android:id="@+id/abt_arms"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed"
            android:text="@string/sculpt_your_arms_in_a_short_time_and_wow_them_with_your_toned_arms"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="35sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="780dp"
        android:orientation="vertical">
        <androidx.cardview.widget.CardView
            android:id="@+id/dynamicchest_card"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="30dp"
            android:backgroundTint="#FFC107"
            android:elevation="10dp"
            app:cardCornerRadius="80dp">
            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="DYNAMIC CHEST"
                    android:textSize="40sp"
                    android:textAlignment="center"
                    android:paddingTop="20sp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/punches_card"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="30dp"
            android:elevation="10dp"
            android:backgroundTint="#FFC107"
            app:cardCornerRadius="80dp">
            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="PUNCHES"
                    android:textSize="40sp"
                    android:textAlignment="center"
                    android:paddingTop="20sp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/tricepdips_card"
            android:elevation="10dp"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="30dp"
            android:backgroundTint="#FFC107"
            app:cardCornerRadius="80dp">
            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="TRICEP DIPS"
                    android:textSize="40sp"
                    android:textAlignment="center"
                    android:paddingTop="20sp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/planks_card"
            android:elevation="10dp"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="30dp"
            android:backgroundTint="#FFC107"
            app:cardCornerRadius="80dp">
            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/planks"
                    android:textSize="40sp"
                    android:textAlignment="center"
                    android:paddingTop="20sp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

</LinearLayout>