<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PlanksActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/planks_card"
        android:layout_width="350dp"
        android:layout_height="600dp"
        app:cardCornerRadius="40dp"
        android:backgroundTint="#FFC107"
        android:elevation="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.351">

        <TextView
            android:id="@+id/abt_planks"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lay flat on your belly on the floor. Support yourself on your forearm so that your upper and lower body are not touching the floor. Lower and raise your hips up and down while making sure not to touch the ground."
            android:layout_gravity="center"
            android:textSize="38sp"
            android:textAlignment="center"
            android:fontFamily="sans-serif-condensed"/>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>